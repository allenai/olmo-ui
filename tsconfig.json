{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "ESNext"],
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@test-utils": ["src/utils/test-utils"],
      "@playwright-utils": ["e2e/playwright-utils"],
      "@/*": ["src/*"],
    },
    "types": ["vitest/globals"]
  },
  "include": ["src/**/*", "@types", "./vitest-setup.ts", "index.d.ts", "__mocks__", "webpack.config.js", "vitest.config.mts", ".eslintrc.js", "e2e", "playwright.config.ts", "panda.config.ts", "varnish-panda-runtime/dist/**/*"],
  "exclude": ["node_modules", "dist"]
}
